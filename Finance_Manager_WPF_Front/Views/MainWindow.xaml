<Window x:Class="Finance_Manager_WPF_Front.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance_Manager_WPF_Front.Views"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        
        xmlns:viewmodels="clr-namespace:Finance_Manager_WPF_Front.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" 
        Width="1000">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="TransactionItemTemplate.xaml"/>
                <ResourceDictionary Source="SavingItemTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>

    </Window.Resources>

    <!-- Main Grid -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar with buttons -->
        <Border Grid.Column="0" Background="#0b5351">
            <StackPanel Margin="10">
                <TextBlock Text="Finance Manager" 
                           TextWrapping="Wrap"
                           FontSize="20" 
                           FontWeight="Bold" 
                           Margin="0,20,0,30" 
                           HorizontalAlignment="Center"/>

                <Button Content="Transactions" 
                        Height="75" 
                        Margin="0,10,0,10" 
                        BorderThickness="0"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Click="TransactionsPageButton_Click">
                </Button>

                <Button Content="Savings" 
                        Height="75" 
                        Margin="0,10,0,10"
                        BorderThickness="0"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Click="SavingsPageButton_Click">
                </Button>

                <Button Content="Analytics" 
                        Height="75" 
                        Margin="0,10,0,10" 
                        BorderThickness="0"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Click="AnalyticsPageButton_Click">
                </Button>

                <Button Content="Settings" 
                        Height="75" 
                        Margin="0,10,0,10" 
                        BorderThickness="0"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Click="SettigsPageButton_Click">
                </Button>
            </StackPanel>
        </Border>

        <!-- Main content area - Transactions Page -->
        <Grid Grid.Column="1" Background="#092327" x:Name="TransactionsPage" Visibility="Collapsed">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Balance Display Section -->
            <Border Grid.Row="0" Background="#00a9a5" Padding="10" Margin="10" CornerRadius="10">
                <StackPanel>
                    <!-- Primary Balance -->
                    <Grid Margin="0,0,0,10">

                        <!-- Text="PrimaryBalance" -->
                        <TextBlock Text="{Binding UserSession.CurrentUser.PrimaryCurrencyBalance.Balance}"
                                   Foreground="Black" 
                                   FontSize="30" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Grid.Column="0"/>

                        <TextBlock Text="{Binding UserSession.CurrentUser.PrimaryCurrencyBalance.Currency}"
                                   Foreground="Black" 
                                   FontSize="14" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" 
                                   Margin="275,0,0,0"/>

                        <!-- Floating Add Transaction Button -->
                        <Button Content="+"
                                ToolTip="Add Transaction"
                                Command="{Binding EditTransactionCommand}"
                                Height="60"
                                Width="60"
                                Background="#092327"
                                Foreground="White"
                                FontSize="30"
                                FontWeight="Bold"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"                                
                                Margin="0,0,0,0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="30"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                    </Grid>

                    <!-- Secondary Balances -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Secondary Balance 1 -->
                        <Border Grid.Column="0" Background="#00a9a5" Margin="0,0,5,0" Padding="10" CornerRadius="5">
                            <Grid>

                                <!-- Text="SecondaryBalance1" -->
                                <TextBlock Text="{Binding UserSession.CurrentUser.SecondaryCurrencyBalance1.Balance}"
                                           Foreground="Black" 
                                           FontSize="20" 
                                           FontWeight="SemiBold" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>

                                <TextBlock Text="{Binding UserSession.CurrentUser.SecondaryCurrencyBalance1.Currency}"
                                           Foreground="Black" 
                                           FontSize="12" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" 
                                           Margin="200,0,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Secondary Balance 2 -->
                        <Border Grid.Column="1" Background="#00a9a5" Margin="5,0,0,0" Padding="10" CornerRadius="5">
                            <Grid>

                                <!-- Text="SecondaryBalance2" -->
                                <TextBlock Text="{Binding UserSession.CurrentUser.SecondaryCurrencyBalance2.Balance}"                                    
                                           Foreground="Black" 
                                           FontSize="20" 
                                           FontWeight="SemiBold" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>

                                <TextBlock Text="{Binding UserSession.CurrentUser.SecondaryCurrencyBalance2.Currency}"
                                           Foreground="Black" 
                                           FontSize="12" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Margin="200,0,0,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Transactions List will go here -->
            <Grid Grid.Row="1" Margin="10">
                <ScrollViewer VerticalScrollBarVisibility="Hidden" 
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <!-- Transactions ItemsControl (instead of ListView) -->
                        <ItemsControl ItemsSource="{Binding UserSession.CurrentUser.Transactions}"
                                      Background="Transparent" 
                                      BorderThickness="0"
                                      ItemTemplate="{StaticResource TransactionItemTemplate}">
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,5"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                        </ItemsControl>

                        <!-- Load More Button -->
                        <Button Content="Load More Transactions"
                                Command="{Binding GetTransactionsPageCommand}"
                                Height="40"
                                Margin="0,10,0,0"
                                FontSize="14"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                HorizontalAlignment="Center"
                                Padding="20,5">
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Transaction Editor Overlay -->
            <Grid Grid.RowSpan="2" 
                  Background="#80000000"
                  Visibility="{Binding IsTransactionEditorVisible, Converter={StaticResource BooleanToVisibilityConverter}}">

                <!-- Transaction Editor Panel -->
                <Border Width="530" 
            Height="350" 
            Background="#edf6f9" 
            CornerRadius="10" 
            Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" 
                       Text="Transaction Details" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

                        <!-- Form Fields -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Transaction Name -->
                            <TextBlock Grid.Row="0" 
                           Grid.Column="0" 
                           Text="Name:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                            <TextBox Grid.Row="0" 
                         Grid.Column="1" 
                         Text="{Binding NewTransaction.Name, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="16" 
                         Padding="5" 
                         Margin="0,0,0,15"/>

                            <!-- Transaction Price -->
                            <TextBlock Grid.Row="1" 
                           Grid.Column="0" 
                           Text="Price:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                            <TextBox Grid.Row="1" 
                         Grid.Column="1" 
                         Text="{Binding NewTransaction.Price, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="16" 
                         Padding="5" 
                         Margin="0,0,0,15"/>

                            <!-- Date and Time Selection -->
                            <TextBlock Grid.Row="2" 
                           Grid.Column="0" 
                           Text="Date/Time:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                            <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <!-- Day -->
                                    <ColumnDefinition Width="80"/>
                                    <!-- Month -->
                                    <ColumnDefinition Width="80"/>
                                    <!-- Year -->
                                    <ColumnDefinition Width="60"/>
                                    <!-- Hour -->
                                    <ColumnDefinition Width="60"/>
                                    <!-- Minute -->
                                </Grid.ColumnDefinitions>

                                <!-- Day ComboBox -->
                                <ComboBox Grid.Column="0" 
                              ItemsSource="{Binding DaysList}" 
                              SelectedItem="{Binding SelectedDay}"
                              FontSize="14" 
                              Margin="0,0,5,0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextAlignment="Center"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <!-- Month ComboBox -->
                                <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding MonthsList}" 
                              SelectedItem="{Binding SelectedMonth}"
                              FontSize="14" 
                              Margin="5,0,5,0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextAlignment="Center"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <!-- Year ComboBox -->
                                <ComboBox Grid.Column="2" 
                              ItemsSource="{Binding YearsList}" 
                              SelectedItem="{Binding SelectedYear}"
                              FontSize="14" 
                              Margin="5,0,5,0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextAlignment="Center"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <!-- Hour ComboBox -->
                                <ComboBox Grid.Column="3" 
                              ItemsSource="{Binding HoursList}" 
                              SelectedItem="{Binding SelectedHour}"
                              FontSize="14" 
                              Margin="5,0,5,0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextAlignment="Center"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <!-- Minute ComboBox -->
                                <ComboBox Grid.Column="4" 
                              ItemsSource="{Binding MinutesList}" 
                              SelectedItem="{Binding SelectedMinute}"
                              FontSize="14" 
                              Margin="5,0,0,0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextAlignment="Center"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>

                            <!-- Category -->
                            <TextBlock Grid.Row="3" 
                           Grid.Column="0" 
                           Text="Category:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                            <ComboBox Grid.Row="3" 
                          Grid.Column="1" 
                          ItemsSource="{Binding Categories}" 
                          SelectedItem="{Binding NewTransaction.Category}" 
                          DisplayMemberPath="Name"
                          FontSize="16" 
                          Padding="5" 
                          Margin="0,0,0,15"/>

                            <!-- Inner Category -->
                            <TextBlock Grid.Row="4" 
                           Grid.Column="0" 
                           Text="Inner Category:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"
                           Opacity="0.5"/>
                            <ComboBox Grid.Row="4" 
                          Grid.Column="1" 
                          ItemsSource="{Binding NewTransaction.Category.InnerCategories}" 
                          SelectedItem="{Binding NewTransaction.InnerCategory}" 
                          DisplayMemberPath="Name"
                          FontSize="16" 
                          Padding="5" 
                          Margin="0,0,0,15"
                          Opacity="0.5"
                          IsEditable="True"/>
                        </Grid>

                        <!-- Buttons -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Cancel Button (Always Visible) -->
                            <Button Grid.Column="0" 
                        Content="Cancel" 
                        Command="{Binding CloseTransactionEditorCommand}" 
                        Background="#83c5be"
                        Foreground="Black"
                        FontSize="16" 
                        FontWeight="SemiBold"
                        Padding="10" 
                        Margin="0,20,10,0"/>

                            <!-- Create Button (Only Visible in Create Mode) -->
                            <Button Grid.Column="1" 
                        Content="Create" 
                        Command="{Binding CreateTransactionCommand}" 
                        Background="#006d77"
                        Foreground="White"
                        FontSize="16" 
                        FontWeight="SemiBold"
                        Padding="10" 
                        Margin="10,20,0,0"/>

                            <!-- Update Button (Only Visible in Edit Mode) -->
                            <Button Grid.Column="1" 
                        Content="Update" 
                        Command="{Binding UpdateTransactionCommand}" 
                        Background="#006d77"
                        Foreground="White"
                        FontSize="16" 
                        FontWeight="SemiBold"
                        Padding="10" 
                        Margin="10,20,0,0"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

        </Grid>

        <!-- Main content area - Savings Page -->
        <Grid Grid.Column="1" Background="#092327" x:Name="SavingsPage" Visibility="Collapsed"> <!-- Collapsed -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Total Savings Display Section -->
            <Border Grid.Row="0" Background="#00a9a5" Padding="10" Margin="10" CornerRadius="10">
                    <!-- Total Savings -->
                    <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                            Text="Total Savings:"
                       Foreground="Black" 
                       FontSize="30" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"
                            Text="{Binding SumSavings}"
                       Foreground="Black" 
                       FontSize="20" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" 
                       Margin="20,0,0,0"/>

                    <Button Grid.Column="2"
                            Content="+"
                            ToolTip="Add Saving"
                            Command="{Binding OpenSavingEditorCommand}"
                            Height="60"
                            Width="60"
                            Background="#092327"
                            Foreground="White"
                            FontSize="30"
                            FontWeight="Bold"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"                                
                            Margin="0,0,0,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="30"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                </Grid>
            </Border>

            <!-- Savings List -->
            <Grid Grid.Row="1" Margin="10">
                <ScrollViewer VerticalScrollBarVisibility="Hidden" 
                  HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <!-- Savings ItemsControl -->
                        <ItemsControl ItemsSource="{Binding _userSession.CurrentUser.Savings}"
                          Background="Transparent" 
                          BorderThickness="0"
                          ItemTemplate="{StaticResource SavingItemTemplate}">
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="Margin" Value="0,5"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                        </ItemsControl>

                        <!-- Load More Button -->
                        <Button Content="Load More Savings"
                    Command="{Binding GetSavingsPageCommand}"
                    Height="40"
                    Margin="0,10,0,0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    Padding="20,5">
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Create Saving Editor Overlay -->
            <Grid Grid.RowSpan="2" 
      Background="#80000000"
      Visibility="{Binding IsSavingEditorVisible, Converter={StaticResource BooleanToVisibilityConverter}}">

                <!-- Create Saving Editor Panel -->
                <Border Width="400" 
            Height="250" 
            Background="#edf6f9" 
            CornerRadius="10" 
            Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" 
                       Text="Create New Saving" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

                        <!-- Form Fields -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Saving Name -->
                            <TextBlock Grid.Row="0" 
                           Grid.Column="0" 
                           Text="Name:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                            <TextBox Grid.Row="0" 
                         Grid.Column="1" 
                         Text="{Binding NewSaving.Name, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="16" 
                         Padding="5" 
                         Margin="0,0,0,15"/>

                            <!-- Saving Goal -->
                            <TextBlock Grid.Row="1" 
                           Grid.Column="0" 
                           Text="Goal:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                            <TextBox Grid.Row="1" 
                         Grid.Column="1" 
                         Text="{Binding NewSaving.Goal, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="16" 
                         Padding="5" 
                         Margin="0,0,0,15"/>
                        </Grid>

                        <!-- Buttons -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" 
                        Content="Cancel" 
                        Command="{Binding CloseSavingEditorCommand}" 
                        Background="#83c5be"
                        Foreground="Black"
                        FontSize="16" 
                        FontWeight="SemiBold"
                        Padding="10" 
                        Margin="0,20,10,0"/>

                            <Button Grid.Column="1" 
                        Content="Create" 
                        Command="{Binding CreateSavingCommand}" 
                        Background="#006d77"
                        Foreground="White"
                        FontSize="16" 
                        FontWeight="SemiBold"
                        Padding="10" 
                        Margin="10,20,0,0"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- Top Up Saving Editor Overlay -->
            <Grid Grid.RowSpan="2" 
      Background="#80000000"
      Visibility="{Binding IsTopUpEditorVisible, Converter={StaticResource BooleanToVisibilityConverter}}">

                <!-- Top Up Editor Panel -->
                <Border Width="350" 
            Height="250" 
            Background="#edf6f9" 
            CornerRadius="10" 
            Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" 
                       Text="Top Up Saving" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

                        <!-- Form Fields -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Saving Name (Read-only) -->
                            <TextBlock Grid.Row="0" 
                           Grid.Column="0" 
                           Text="Name:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                            <TextBlock Grid.Row="0" 
                           Grid.Column="1" 
                           Text="{Binding NewSaving.Name}" 
                           FontSize="16" 
                           Padding="5" 
                           Margin="0,0,0,15"/>

                            <!-- Top Up Amount -->
                            <TextBlock Grid.Row="1" 
                           Grid.Column="0" 
                           Text="Amount:" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                            <TextBox Grid.Row="1" 
                         Grid.Column="1" 
                         Text="{Binding TopUp, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="16" 
                         Padding="5" 
                         Margin="0,0,0,15"/>
                        </Grid>

                        <!-- Buttons -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" 
                        Content="Cancel" 
                        Command="{Binding CloseTopUpEditorCommand}" 
                        Background="#83c5be"
                        Foreground="Black"
                        FontSize="16" 
                        FontWeight="SemiBold"
                        Padding="10" 
                        Margin="0,20,10,0"/>

                            <Button Grid.Column="1" 
                        Content="Top Up" 
                        Command="{Binding UpdateSavingCommand}" 
                        Background="#006d77"
                        Foreground="White"
                        FontSize="16" 
                        FontWeight="SemiBold"
                        Padding="10" 
                        Margin="10,20,0,0"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Main content area - Analytics Page -->
        <Grid Grid.Column="1" Background="#092327" x:Name="AnalyticsPage" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <lvc:PieChart 
                Series="{Binding AnalyticsData}" 
                LegendPosition="Hidden" 
                Grid.Column="0"
                Margin="30"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Get spends analytics for:"
                           Foreground="White"                           
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           FontSize="26"
                           FontWeight="Bold"
                           TextWrapping="Wrap"/>

                <Button Grid.Row="1"
                        Margin="20"
                        Command="{Binding GetAnalyticsForWeekCommand}">
                    <TextBlock Text="Last week."
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontSize="20"/>
                </Button>

                <Button Grid.Row="2"
                        Margin="20"
                        Command="{Binding GetAnalyticsForMonthCommand}">
                    <TextBlock Text="Last month."
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontSize="20"/>
                </Button>

                <Button Grid.Row="3"
                        Margin="20"
                        Command="{Binding GetAnalyticsFor3MonthCommand}">
                <TextBlock Text="Last 3 month."
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontSize="20"/>
                </Button>

                <Button Grid.Row="4"
                        Margin="20"
                        Command="{Binding GetAnalyticsForHalfYearCommand}">
                    <TextBlock Text="Last half year."
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontSize="20"/>
                </Button>

                <Button Grid.Row="5"
                        Margin="20"
                        Command="{Binding GetAnalyticsForYearCommand}">
                    <TextBlock Text="Last year"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontSize="20"/>
                </Button>

            </Grid>
        </Grid>

        <!-- Main content area - Settings Page -->
        <Grid Grid.Column="1" Background="#092327" x:Name="SettingsPage" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Account: "
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding _userSession.CurrentUser.Email}"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                <Button Grid.Column="2"
                        Content="Logout"
                        Command="{Binding LogoutCommand}"                        
                        Margin="50"
                        FontSize="20"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Change currencies: "
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">

                    <TextBlock Text="Currency Rang:"
                               Foreground="White"
                               FontSize="20"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <ComboBox ItemsSource="{Binding CurrencyRangs}" 
                              SelectedItem="{Binding NewCurrencyRang}"                           
                              FontSize="16" 
                              Padding="5" 
                              Margin="0,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">

                    <TextBlock Text="Currency Code:"
                               Foreground="White"
                               FontSize="20"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <ComboBox ItemsSource="{Binding CurrencyCodes}" 
                               SelectedItem="{Binding NewCurrencyCode}"                           
                               FontSize="16" 
                               Padding="5" 
                               Margin="30,0,30,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="3"
                        Content="Add"
                        Command="{Binding AddCurrencyCommand}"                        
                        Margin="50"
                        FontSize="20"/>
                
            </Grid>

        </Grid>
    
    </Grid>
</Window>